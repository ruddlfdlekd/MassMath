<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  	<mapper namespace="NoticeMapper">
 		<select id="selectList" parameterType="ListData" resultType="com.math.board.BoardDTO">
 			select * from
  			(select rownum R, N.* from
  			(select * from notice
  			<if test="kind == 'title'">
				where title LIKE '%'|| #{search}||'%'
			</if>
			<if test="kind == 'writer'">
				where writer LIKE '%'|| #{search}||'%'
			</if>
			<if test="kind == 'contents'">
				where contents LIKE '%'|| #{search}||'%'
			</if>			
  			order by num desc) N)
  			where R between #{startRow} and #{lastRow} <!-- Map의 key를 써줌 -->
  		</select>
 		
  		<insert id="noticeInsert" parameterType="com.math.board.BoardDTO">
  			insert into notice values(notice_seq.nextval,#{email},#{writer},#{title},#{contents},sysdate,0,#{fname})
  		</insert>
  		
  		<select id="selectOne" parameterType="int" resultType="com.math.board.BoardDTO">
  			select n.*, f.* from notice n, files f 
  			where n.num=#{num} and n.num=f.num(+)
  		</select>
  		
  		<resultMap type="NoticeDTO" id="NoticeResult2">
  			<id property="num"  column="num"/>
  			<result property="writer" column="writer" />
  			<result property="title" column="title"/>
  			<result property="contents" column="contents"/>
  			<result property="reg_date" column="reg_date"/>
  			<result property="hit" column="hit"/>
  			<collection property="files" ofType="FileDTO" javaType="ArrayList">
  				<id property="fnum" column="fnum"/>
  				<result property="num" column="num"/>
  				<result property="fname" column="fname"/>
  				<result property="oname" column="oname"/>
  			</collection>
  		</resultMap>
  		
  		
  		<delete id="noticeDelete" parameterType="com.math.board.BoardDTO">
  			delete notice where num=#{num}
  		</delete>
  		
  		<update id="noticeUpdate">
  			update notice set title=#{title}, contents=#{contents} where num=#{num}
  		</update>
  		
  		<select id="totalCount" resultType="int" parameterType="listData">
  			select nvl(count(num),0) from notice
			<if test="kind == 'title'">
				where title LIKE '%'|| #{search}||'%'
			</if>
			<if test="kind == 'writer'">
				where writer LIKE '%'|| #{search}||'%'
			</if>
			<if test="kind == 'contents'">
				where contents LIKE '%'|| #{search}||'%'
			</if>
  		</select>
  	</mapper>